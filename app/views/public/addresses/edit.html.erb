<div class="container px-5 py-5">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>配送先編集</h2>
     <% if @address.errors.any? %>
    　<%= @address.errors.count %>error prohibited this obj from being saved
    　<% @address.errors.full_messages.each do |message| %>
　     <%= message %>
      <% end %>
     <% end %>

    <%= form_with model: @address, url: address_path, method: :patch, local: true do |f| %>
    <div class="form-row">
      <div class="form-group col-4">
       <label for="inputPostal_code">郵便番号（ハイフンなし）</label>
      </div>
      <div class="form-group col-8">
       <%= f.text_field :postal_code, autofocus: true, id:"inputpostal_code", placeholder:"郵便番号" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-4">
       <label for="inputAddress">住所</label>
      </div>
      <div class="form-group col-8">
       <%= f.text_field :address, autofocus: true, id:"inputaddress", placeholder:"住所" %>
      </div>
    </div>

    <div class="form-row">
      <div class="form-group col-4">
       <label for="inputName">宛名</label>
      </div>
      <div class="form-group col-4">
       <%= f.text_field :name, autofocus: true, id:"inputname", placeholder:"宛名" %>
      </div>
      <div class="form-group col-4 text-right">
       <%= f.submit "変更内容を保存する", class: "btn btn-success btn-sm btn-block update book" %>
      </div>
    </div>
   <% end %>
  </div>
 </div>
</div>