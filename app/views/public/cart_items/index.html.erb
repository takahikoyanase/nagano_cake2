<h2>ショッピングカート</h2>
 <%= link_to "カートを空にする", cart_item.destroy_all %>

 <table class="table">
  <thead>
  <tr>
    <th>商品名</th>
    <th>単価（税込）</th>
    <th>数量</th>
    <th>小計</th>
    <th></th>
  </tr>
  </thead>

  <tbody>
  <% @cart_items.each do |cart_item| %>
  <tr>
    <th>
     <td><%= attachment_image_tag item, :image, :fill, 100, 100, fallback: "no_image.jpeg" %> </td>
     <td><%= cart_item.item.name %></td>
    </th>
    <th>
     <td><%= (cart_item.item.with_tax_price %></td>
    </th>
    <th>
     <td><%= cart_item.item.amount %></td>
    </th>
    <th>
     <td><%= cart_item.subtotal %></td>
     <%  +=  cart_item.item.subtotal %>
     <td><%= link_to "Edit", cart_item_path(@cart_item), method: :patch, class: "btn btn-success btn-sm btn-block edit" %></td>
    </th>
    <th>
     <td><%= link_to "削除", cart_items_path(@cart_item), method: :delete, data: {confirm: "本当に消しますか？"}, class: "btn btn-sm btn-danger btn-sm btn-block delete" %></td>
    </th>
  </tr>
  <% end %>
  </tbody>
</table>

<%= link_to "買い物を続ける", items_path %>