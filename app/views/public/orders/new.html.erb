<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>注文情報入力</h2>
     <%= form_with model: @order, url: orders_comfirm_path, method: :post, local: true do |f| %>
     <div>支払方法</div>
      <div>
       <%= f.radio_button :payment_method, Order.payment_methods.key(0) %>
       <%= f.label :payment_method, Order.payment_methods_i18n[:credit_card] %>

       <%= f.radio_button :payment_method, Order.payment_methods.key(1) %>
       <%= f.label :payment_method, Order.payment_methods_i18n[:transfer] %>
      </div>
     <div>お届け先</div>
      <div>ご自身の住所</div>
      <div></div>
      <div>登録済み住所から選択</div>
       <div><%= f.select :address_id, options_from_collection_for_select(Address.all, :id, :full_address) %></div>
      <div>新しいお届け先</div>
       <table class="table">
        <tr>
         <th>郵便番号（ハイフンなし）</th>
         <th><%= f.text_field :postal_code, placeholder: "0000000" %></th>
        </tr>
        <tr>
        <th>住所</th>
         <th><%= f.text_field :address, placeholder: "〇〇県〇〇市〇-〇" %></th>
        </tr>
        <tr>
         <th>宛名</th>
         <th><%= f.text_field :name, placeholder: "鈴木太郎" %></th>
        </tr>
       </table>
       <%= f.submit "確認画面へ進む", class: "btn btn-primary" %>
      <% end %>
    </div>
  </div>
</div>
