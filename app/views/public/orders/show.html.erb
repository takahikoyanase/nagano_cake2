<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
      <h2>注文履歴詳細</h2>
        <table class="table">
          <td class="form-row">
          <td class="form-group col-6">
          <tr>注文情報</tr>
          <tr>
            <td>注文日</td>
            <td><%= @order.created_at %></td>
          </tr>
          <tr>
            <td>配送先</td>
            <td><%= @order.postal_code %><%= @order.address %><%= @order.name %></td>
          </tr>
          <tr>
            <td>支払方法</td>
            <td><%= @order.payment_method %></td>
          </tr>
          <tr>
            <td>ステータス</td>
            <td><%= @order.status %></td>
          </tr>
          </td>

          <td class="form-group col-6" >
          <tr>請求情報</tr>
          <tr>
            <td>商品合計</td>
            <td><%= @order.total_payment - 800 %></td>
          </tr>
          <tr>
            <td>配送料</td>
            <td><%= 800 %></td>
          </tr>
          <tr>
            <td>ご請求額</td>
            <td><%= @order.total_payment %></td>
          </tr>
          </td>
          </td>

          <td class="form-row">
          <td class="form-group col-12">
          <tr>注文内容</tr>
          <tr>
            <th>商品</th>
            <th>単価（税込）</th>
            <th>個数</th>
            <th>小計</th>
          </tr>

          <% @order_details.each do |order_detail| %>
          <tr>
            <td><%= order_details.item.name %></td>
            <td><%= order_details.item.with_tax_price %></td>
            <td><%= order_details.item.amount %></td>
            <td><%= order_detail.subtotal %></td>
          </tr>
          <% end %>
          </td>
          </td>
        </table>
      </div>
    </div>
  </div>