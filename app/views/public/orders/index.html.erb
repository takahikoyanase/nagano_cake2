<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
　    <h2>注文履歴一覧</h2>
  　    <div class="form-row">
    　  <div class="form-group col-12">
        <table class="table">
          <tr>
            <th>注文日</th>
            <th>配送先</th>
            <th>注文商品</th>
            <th>支払額</th>
            <th>ステータス</th>
            <th>注文詳細</th>
          </tr>
          <% @orders.each do |order| %>
          <tr>
            <td><%= order.created_at %></td>
            <td><%= order.postal_code %><%= order.address %><%= order.name %></td>
            <td></td>
            <td><%= order.total_payment %>  </td>
            <td><%= order.status %></td>
            <td><%= link_to "表示する", order_path(current_customer.id), class: "btn btn-primary" %></td>
          </tr>
          <% end %>
        </table>
      </div>
      </div>
    </div>
  </div>
</div>
