<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
    <h2>新規会員登録</h2>

    <%= form_with model: @customer, url: customer_registration_path, local: true do |f| %>
     <%= render "devise/shared/error_messages", resource: resource %>

     <div class="form-group row">
       <table calss="table">
         <tr>
           <th>名前</th>
            <td class="field">
             <%= f.label :"姓" %>
　           <%= f.text_field :last_name, autofocus: true %>
            </td>

            <td class="field">
             <%= f.label :"名" %>
             <%= f.text_field :first_name, autofocus: true %>
            </td>
         </tr>

         <tr>
           <th>フリガナ</th>
            <td class="field">
             <%= f.label :"セイ" %>
             <%= f.text_field :last_name_kana, autofocus: true %>
            </td>

            <td class="field">
             <%= f.label :"メイ" %>
             <%= f.text_field :first_name_kana, autofocus: true %>
            </td>
         </tr>

         <tr>
           <th>郵便番号(ハイフンなし)</th>
           <td class="field">
            <%= f.text_field :postal_code, autofocus: true, placeholder: "0000000" %>
           </td>
         </tr>

         <tr>
           <th>住所</th>
           <td class="field">
            <%= f.text_field :address, autofocus: true, placeholder: "〇〇県〇〇市" %>
           </td>
         </tr>

         <tr>
           <th>電話番号(ハイフンなし)</th>
           <td class="field">
            <%= f.text_field :telephone_number, autofocus: true, placeholder: "00000000" %>
           </td>
         </tr>

         <tr>
           <th>メールアドレス</th>
           <td class="field">
            <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
           </td>
         </tr>

         <tr>
           <th>パスワード(6文字以上)</th>
           <td class="field">
            <%= f.password_field :password, autocomplete: "new-password" %>
           </td>
         </tr>

         <tr>
           <th>パスワード(確認用)</th>
           <td class="field">
            <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
           </td>
         </tr>

         <tr>
           <th></th>
           <td class="actions">
            <%= f.submit "新規登録", class: "btn btn-success btn-sm btn-block sign_up" %>
           </td>
         </tr>
         <% end %>

         <tr>
           <th>既に登録済みの方</th>
         </tr>
         <td>
          <%= link_to "こちら", new_customer_session_path %>からログインしてください。
         </td>
      </div>
   </div>
  </div>
</div>