<div class="container px-5 py-5">
 <div class="row">
  <div class="col-md-8 ">
   <h2>会員編集画面</h2>
   <%= form_with model: @customer, url: customer_path, method: :patch, local: true do |f| %>

   <div class="form-row">
    <div class="form-group col-4">
      <label for="inputName">氏名</label>
    </div>
    <div class="form-group col-4">
      <%= f.text_field :last_name, autofocus: true, id:"inputLast_name", placeholder:"姓" %>
    </div>
    <div class="form-group col-4">
      <%= f.text_field :first_name, autofocus: true, id:"inputFirst_name", placeholder:"名" %>
    </div>
   </div>

   <div class="form-row">
    <div class="form-group col-4">
      <label for="inputName_kana">フリガナ</label>
    </div>
    <div class="form-group col-4">
      <%= f.text_field :last_name_kana, autofocus: true, id:"inputLast_name_kana", placeholder:"セイ" %>
    </div>
    <div class="form-group col-4">
      <%= f.text_field :first_name_kana, autofocus: true, id:"inputFirst_name_kana", placeholder:"メイ" %>
    </div>
   </div>

   <div class="form-row">
    <div class="form-group col-4">
      <label for="inputPostal_code">郵便番号</label>
    </div>
    <div class="form-group col-8">
       <%= f.text_field :postal_code, autofocus: true, id:"inputPostal_code", placeholder:"郵便番号" %>
    </div>
   </div>

   <div class="form-row">
    <div class="form-group col-4">
      <label for="inputAddress">住所</label>
    </div>
    <div class="form-group col-8">
      <%= f.text_field :address, autofocus: true, id:"inputAddress", placeholder:"住所" %>
    </div>
   </div>

   <div class="form-row">
    <div class="form-group col-4">
      <label for="inputTelephone_number">電話番号</label>
    </div>
    <div class="form-group col-8">
      <%= f.text_field :telephone_number, autofocus: true, id:"inputTelephone_number", placeholder:"電話番号" %>
    </div>
   </div>

   <div class="form-row">
    <div class="form-group col-4">
      <label for="inputEmail">メールアドレス</label>
    </div>
    <div class="form-group col-8">
      <%= f.text_field :email, autofocus: true, id:"inputEmail", placeholder:"メールアドレス" %>
    </div>
   </div>

   <div class="form-row">
    <div class="form-group col-4"></div>
    <div class="form-group col-4">
     <%= f.submit "編集内容を保存", class: "btn btn-success btn-sm create book" %>
     <% end %>
    </div>
    <div class="form-group col-4">
     <%= link_to "退会する" ,  unsubscribe_path(@customer) , class: "btn btn-sm btn-danger btn-sm delete" %>
    </div>
   </div>
  </div>
</div>