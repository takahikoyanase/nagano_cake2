<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-1">
     <h2>注文履歴一覧</h2>
     <table class="table">
       <td class="form-row">
       <td class="form-group col-5">
         <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>商品名</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
         </tr>
        <% @orders.each do |order| %>
         <tr>
          <td><%= order.created_at %></td>
          <td><%= order.postal_code %></br>
              <%= order.address %></br>
              <%= order.name %>
          </td>
          <td><%= @order_detail.item.name %></td>
          <td><%= order.total_payment %></td>
          <td><%= order.status %></td>
          <td><%= link_to "表示する", order_path(@order), class: "btn btn-primary" %></td>
         </tr>
       </td>
       </td>
     </table>
    </div>
  </div>
</div>
