<div class="container">
  <div class="row">
    <div class="col-md-6 offset-md-1">
    <h2>ジャンル編集</h2>
     <%= form_with model: @genre, url: admins_genre_path(@genre), method: :patch, local: true do |f| %>
    <div>
     <table class="table">
      <tr>
        <th>ジャンル</th>
        <th><%= f.text_field :name, autofocus: true %></th>
        <th><%= f.submit "変更を保存", class: "btn btn-success btn-sm btn-block update genre" %></th>
        <% end %>
      </tr>
     </table>
    </div>
    </div>
  </div>
</div>