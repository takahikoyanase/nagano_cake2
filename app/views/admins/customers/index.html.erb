<div class="container">
  <div class="row">
    <div class="col-md-7 offset-md-1">
     <h2>会員一覧</h2>
      <table class="table table-hover table inverse">
       <thead>
        <tr>
         <th>会員ID</th>
         <th>氏名</th>
         <th>メールアドレス</th>
         <th>ステータス</th>
        </tr>
       </thead>

       <tbody>
        <% @customers.each do |customer| %>
        <tr>
         <td><%= customer.id %></td>
         <td><%= link_to customer.last_name, admins_customer_path(customer) %><%= link_to customer.first_name, admins_customer_path(customer) %></td>
         <td><%= customer.email %></td>
         <td><%= customer.is_active %></td>
        </tr>
       <% end %>
       <%= paginate @customers %>
       </tbody>
      </table>
   </div>
  </div>
</div>
