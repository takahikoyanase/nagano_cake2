<div class="container">
  <div class="row">
    <div class="col-md-8 offset-md-1">
     <h2> <%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h2>
      <div class="form-group row">
       <div>
        <label for="inputId">会員ID</label>
        <%= @customer.id %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputName">氏名</label>
        <%= @customer.last_name %>
        <%= @customer.first_name %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputName_kana">フリガナ</label>
         <%= @customer.last_name_kana %>
         <%= @customer.first_name_kana %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputPostal_code">郵便番号</label>
        <%= @customer.postal_code %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputAddress">住所</label>
        <%= @customer.address %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputTelephone_number">電話番号</label>
        <%= @customer.telephone_number %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputEmail">メールアドレス</label>
        <%= @customer.email %>
       </div>
      </div>

      <div class="form-group row">
       <div>
        <label for="inputIs_active">会員ステータス</label>
        <%= @customer.is_active %>
       </div>
      </div>

      <%= link_to "編集する", edit_admins_customer_path(@customer), class: "btn btn-success edit genre" %>
      <%= link_to "注文履歴一覧を見る", admins_path, class: "btn btn-primary" %>
     </div>
   </div>
 </div>