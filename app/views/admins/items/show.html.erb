<div class="container">
  <div class="row">
    <div class="col-md-9 offset-md-1">
     <h2>商品詳細</h2>
      <label for="inputImage"></label>
       <%= attachment_image_tag @item, :image, :fill, 100, 100, fallback: "no_image.jpeg" %>

      <div class="form-group row">
       <div>
       <label for="inputName">商品名</label>
        <%= @item.name %>
       </div>
      </div>
      <div class="form-group row">
       <div>
       <label for="inputIntroduction">商品説明</label>
        <%= @item.introduction %>
       </div>
      </div>
      <div class="form-group row">
       <div>
       <label for="inputGenre">ジャンル</label>
        <%= @item.genre.name %>
       </div>
      </div>
      <div class="form-group row">
       <div>
        <label for="inputPrice">税込価格（税抜価格）</label>
        <%= @item.price %>
       </div>
      </div>
      <div class="form-group row">
       <div>
       <label for="inputName">販売ステータス</label>
        <%= @item.is_active %>
       </div>
      </div>
      <%= link_to "編集する", edit_admins_item_path(@item), class: "btn btn-success btn-sm btn-block edit" %>
 　</div>
　</div>
</div>
