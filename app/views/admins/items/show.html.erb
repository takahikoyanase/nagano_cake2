<h2>商品詳細</h2>
 <label for="inputImage"></label>
  <%= attachment_image_tag @item, :image_id, :fill, 50, 50, fallback: "no_image.jpeg" %>

 <table class="table">
   <tr>
     <th>商品名</th>
      <td><%= item.name %></td>
   </tr>
   <tr>
     <th>商品説明</th>
      <td><%= item.introduction %></td>
   </tr>
   <tr>
     <th>ジャンル</th>
      <td><%= genre.name %></td>
   </tr>
   <tr>
     <th>税込価格（税抜価格）</th>
      <td><%= item.price %></td>
   </tr>
   <tr>
     <th>販売ステータス</th>
      <td><%= item.is_active %></td>
   </tr>
 </table>
 <%= link_to "編集する", edit_admins_items_path, class: "btn btn-success btn-sm btn-block edit" %>
