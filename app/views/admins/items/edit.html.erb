<h2>商品編集</h2>
<%= form_with model: @item, url: admins_item_path, method: :patch, local: true do |f| %>
 <div class="form-group row">
  <div>
   <label for="inputImage">商品画像</label>
   <%= f.attachment_field :image %>
  </div>
 </div>

 <div class="form-group row">
  <div>
   <label for="inputName">商品名</label>
   <%= f.text_field :name, autofocus: true, id:"inputName", placeholder:"商品名" %>
  </div>
 </div>

 <div class="form-group row">
  <div>
   <label for="inputIntroduction">商品説明</label>
   <%= f.text_area :introduction, autofocus: true, id:"inputIntroduction", placeholder:"商品説明" %>
  </div>

 <div class="form-group row">
  <div>
   <label for="inputGenre">ジャンル</label>
    <%= f.collection_select :genre_id, @genre, :id, :name, prompt: "選択してください" %>
  </div>
 </div>

 <div class="form-group row">
  <div>
   <label for="inputPrice">税抜価格</label>
   <%= f.text_field :price, autofocus: true, id:"inputPrice", placeholder:"税抜価格" %>
  </div>
 </div>

 <div class="form-group row">
  <div>
   <label for="inputIs_active">販売ステータス</label>
   <div>
    <%= f.radio_button :is_active, true %>
    <%= f.label :is_active, '販売中', value: true %>
   </div>
   <div>
    <%= f.radio_button :is_active, false %>
    <%= f.label :is_active, '販売停止中', value: false %>
   </div>
  </div>
 </div>

 <%= f.submit "変更を保存" %>
<% end %>
