<h2>商品一覧</h2>
<%= link_to "", new_admins_item_path, class: "btn btn-primary" %>
 <table class="table">
   <thead>
     <tr>
       <th>商品id</th>
       <th>商品名</th>
       <th>税抜価格</th>
       <th>ジャンル</th>
       <th>ステータス</th>
     </tr>
   </thead>

   <tbody>
     <% @items.each do |item| %>
     <tr>
      <td><%= items_path(item.id) %></td>
      <td><%= item.name %></td>
      <td><%= item.price %></td>
      <td><%= genre.id %></td>
      <td><%= item.is_active %></td>
     </tr>
     <% end %>
   </tbody>


 </table>