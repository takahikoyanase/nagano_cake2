<div class="container">
  <div class="row">
    <div class="col-md-10">
     <h2>商品一覧</h2> <%= link_to "", new_admins_item_path, class: "btn btn-outline-secondary fas fa-plus-circle" %>

      <table class="table">
       <thead>
        <tr>
         <th>商品id</th>
         <th>商品名</th>
         <th>税抜価格</th>
         <th>ジャンル</th>
         <th>ステータス</th>
        </tr>
       </thead>

       <tbody>
        <% @items.each do |item| %>
        <tr>
         <td><%= item.id %></td>
         <td><%= link_to item.name, admins_item_path(item) %></td>
         <td><%= item.price %></td>
         <td><%= item.genre.name %></td>
         <td><%= item.is_active %></td>
        </tr>
        <% end %>
        <%= paginate @items %>
       </tbody>
     </table>
   </div>
  </div>
 </div>