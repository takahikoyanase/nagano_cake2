<div class="container px-5 py-5">
  <div class="row">
    <h2>商品新規登録</h2>
    <div class="col-md-10 offset-md-1">

       <% if @item.errors.any? %>
       <% @item.errors.count %>error prohibited this obj from being saved
       <% @item.errors.full_messages.each do |message| %>
        <%= message %>
       <% end %>
       <% end %>

     <%= form_with model: @item, url: admins_items_path, method: :post, local: true do |f| %>
      <div class="form-group row">
       <table calss="table">
          <tr>
          <th>商品画像</th>
           <td class="field">
            <%= f.attachment_field :image %>
           </td>
          </tr>
          <tr>
          <th>商品名</th>
           <td class="field">
            <%= f.text_field :name %>
           </td>
          </tr>
          <tr>
          <th>商品説明</th>
           <td class="field">
            <%= f.text_area :introduction %>
           </td>
          </tr>
          <tr>
          <th>ジャンル</th>
           <td>
            <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "選択してください" %>
           </td>
          </tr>
          <tr>
          <th>税抜価格</th>
           <td class="field">
            <%= f.text_field :price %>
           </td>
          </tr>
          <tr>
          <th>販売ステータス</th>
           <td>
            <%= f.radio_button :is_active, "sale" %>
            <%= f.label :is_active, "販売中" %>

            <%= f.radio_button :is_active, "suspended" %>
            <%= f.label :is_active, "販売停止中" %>
           </td>
          </tr>
         </table>
         </div>
         <%= f.submit '新規登録', class: "btn btn-success btn-sm " %>
        <% end %>
     </div>
  </div>
</div
