<h2>新規登録</h2>
 <% if @item.errors.any? %>
  <%= @item.errors.count %>error prohibited this obj from being saved
  <% @item.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
 <% end %>

 <%= form_with model: @item, url: admins_items_path, method: :post, local: true do |f| %>
 <div class="form-group row">
 <h4>商品画像</h4>
  <%= f.attachment_field :image %>
 </div>
 <div class="form-group row">
 <h4>商品名</h4>
  <%= f.text_field :name %>
 </div>
 <div class="form-group row">
 <h4>商品説明</h4>
  <%= f.text_area :introduction %>
 </div>
 <div class="form-group row">
 <h4>ジャンル</h4>
  <%= f.collection_select :genre_id, @genres, :id, :name, prompt: "選択してください" %>
 </div>
 <div class="form-group row">
 <h4>税抜価格</h4>
  <%= f.text_field :price %>
 </div>
 <div class="form-group row">
 <h4>販売ステータス</h4>
  <div>
   <%= f.radio_button :is_active, true %>
   <%= f.label :is_active, '販売中', value: true %>
  </div>
  <div>
   <%= f.radio_button :is_active, false %>
   <%= f.label :is_active, '販売停止中', value: false %>
  </div>
 </div>
 <%= f.submit '新規登録', class: "btn btn-success btn-sm btn-block create item" %>
 <% end %>
