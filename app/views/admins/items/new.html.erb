<h2>新規登録</h2>
 <% if item.errors.any? %>
  <%= item.errors.count %>error prohibited this obj from being saved
  <% item.errors.full_messages.each do |message| %>
   <%= message %>
  <% end %>
 <% end %>

 <%= form_with model: @item, local: true do |f| %>
 <table class="table">
 <th>商品画像</th>
  <%= attachment_image_tag @item, :image, :fll, 80, 80, fallback: "no_image.jpeg" %>
 <th>商品名</th>
  <%= f.text_field :name %>
 <th>商品説明</th>
  <%= f.text_area :introduction %>
 <th>ジャンル</th>
 <th>税抜価格</th>
  <%= f.text_field :price %>
 <th>販売ステータス</th>
 </table>
 <%= f.submit '新規登録', class: "btn btn-success btn-sm btn-block create item" %>
 <% end %>
